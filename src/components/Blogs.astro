---
import '../styles/global.css';
const posts = Object.values(import.meta.glob('../pages/posts/*.md', { eager: true }));
---

<!-- TODO: Put a limit on the amount of blog entries -->
<body>
    <h1>My Blog Entries</h1>
    <ul>
      {posts.map(post => 
        <li>
            <a href={post.url}>
              {post.frontmatter.title}
            </a>
        </li>
      )}
    </ul>
</body>